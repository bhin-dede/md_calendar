{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MD Calendar",
  "version": "0.8.0",
  "identifier": "com.mdcalendar.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:8003",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "MD Calendar",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "icons/icon.png": "icons/icon.png"
    },
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
